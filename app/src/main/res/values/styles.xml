<resources>

    <!-- Base application theme. -->
    <style name="appTheme">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/colorPrimary__100</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:fontFamily">@font/pt_mono</item>
        <item name="android:textSize">@dimen/font_size__body</item>
    </style>


    <!--button themes-->
    <!--button in main page-->
    <style name="button__xl" parent="appTheme">
        <item name="android:textColor">@color/colorPrimary__70</item>
        <item name="android:fontFamily">@font/pt_mono</item>

        <item name="android:fontWeight">@integer/font_weight__bold</item>
        <item name="android:textSize">@dimen/font_size__h3</item>
    </style>

    <style name="button__lg" parent="appTheme">
        <item name="android:paddingBottom">@dimen/margin__1x</item>
        <item name="android:paddingTop">@dimen/margin__1x</item>

        <item name="android:textColor">@color/colorPrimary__100</item>
        <item name="android:fontFamily">@font/pt_mono</item>

        <item name="android:fontWeight">@integer/font_weight__bold</item>
        <item name="android:textSize">@dimen/font_size__h4</item>
    </style>

    <!--not used-->
    <style name="button__md">
        <item name="android:textColor">@color/colorPrimary__100</item>
        <item name="android:fontFamily">@font/pt_mono</item>
        <item name="android:fontWeight">@integer/font_weight__bold</item>
        <item name="android:textSize">@dimen/font_size__h3</item>
    </style>

    <!--button in game control-->
    <style name="button__md__70">
        <item name="android:textColor">@color/colorPrimary__100</item>
        <item name="android:fontFamily">@font/pt_mono</item>
        <item name="android:textColor">@color/colorPrimary__70</item>
    </style>

    <!--button in dialog-->
    <style name="button__sm">
        <item name="android:textColor">@color/colorPrimary__100</item>
        <item name="android:fontFamily">@font/pt_mono</item>
        <item name="android:fontWeight">@integer/font_weight__bold</item>
        <item name="android:textSize">@dimen/font_size__body</item>
    </style>


    <!--dialog theme-->
    <style name="dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorPrimary__100</item>
    </style>

</resources>
